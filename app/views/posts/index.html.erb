<p id="notice"><%= notice %></p>

<h1>はじめてのRailsブログ</h1>

<%= form_with(url: posts_path, method: :get, local: true) do |form| %>
  <div class="search">
    <%= form.label :キーワード %>
    <%= form.text_field :key %>
    <%= form.submit :検索 %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to '見る', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '削除してもいいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>
